  var map = new google.maps.Map(document.getElementById('map'), myOptions);
  var marker = new google.maps.Marker({
    position: myLatlng,
    map: map,
    title:"You are here!"
  });
  </script>


  </div>
  </div>

  <!-- Sign-up Modal -->
<div class="modal fade" id="orderform" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Order your  Stylus</h4>
      </div>
      <div class="modal-body">

        </div>
        <form action="">
          <div class="row">
          <div class="col-xs-6">
            <div class="form-group">
            <label for="firstname">prénom</label>
            <input type="text" placeholder="bob" class="form-control" id="firstname">
            </div>
          </div>
          <div class="col-xs-6">
             <div class="form-group">
            <label for="lastname">nom</label>
            <input type="text" placeholder="l'éponge" class="form-control" id="lastname">
            </div>
          </div>
          <div class="form-group">
            <label for="email">email</label>
          <input type="email" class="form-control" placeholder="bob@gmail.com" id="email">
          </div>
          <input type="submit" value="Order" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>
</div>
